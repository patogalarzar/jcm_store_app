<p id="notice"><%= notice %></p>

<h1 class="cover-heading">Product.</h1>
<p class="lead d-flex w-100 flex-wrap justify-content-between align-items-center mb-3">
  <span class=" mb-3">Details.</span>
</p>

<div class="d-flex justify-content-center">
  <div class="card mb-3" style="width: 75%;">
    <div class="card-body">
      <h5 class="card-title"><%= @product.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <strong>Category:</strong>
        <%= @product.category.name %>
      </h6>
      <p class="card-text">
        <strong>Color:</strong> <%= @product.color %> |
        <strong>Size:</strong> <%= @product.size %>
      </p>
      <p class="card-text" style="font-size: larger;">
        <strong>Price:</strong> <%= @product.price %>
      </p>
      <p class="card-text">
        <strong>Stores:</strong> <%= @product.stores.map(&:name).join(', ') %>
      </p>
      <%= link_to 'Edit', edit_product_path(@product), class: "card-link" %>
      <%= link_to 'Back', products_path, class: "card-link" %>
    </div>
  </div>
</div>

<br>
