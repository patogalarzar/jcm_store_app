<p id="notice"><%= notice %></p>

<h1 class="cover-heading">Categories.</h1>
<p class="lead d-flex w-100 flex-wrap justify-content-between align-items-center mb-3">
  <span class=" mb-3">Here manage your categories.</span>
  <%= link_to 'New Category', new_category_path, class: "btn btn-outline-primary" %>
</p>

<div class="list-group list-group-flush">
  <% @categories.each do |category| %>
    <span class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= category.name %></h5>
      </div>
      <p class="d-flex w-100 justify-content-between mb-1">
        <span>
          <%= category.keywords %>
        </span>
        <span class="list-actions">
          <%= link_to 'Show', category, class: "ml-3" %>
          <%= link_to 'Edit', edit_category_path(category), class: "ml-3" %>
          <%= link_to 'Destroy', category, class: "ml-3", method: :delete, data: { confirm: 'Are you sure?' } %>
        </span>
      </p>
    </span>
  <% end %>
</div>

<br>
