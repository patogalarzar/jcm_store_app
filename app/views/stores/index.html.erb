<p id="notice"><%= notice %></p>

<h1 class="cover-heading">Stores.</h1>
<p class="lead d-flex w-100 flex-wrap justify-content-between align-items-center mb-3">
  <span class=" mb-3">Here manage your stores.</span>
  <%= link_to 'New Store', new_store_path, class: "btn btn-outline-primary" %>
</p>

<div class="list-group list-group-flush">
  <% @stores.each do |store| %>
    <span class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= store.name %></h5>
      </div>
      <small>
        <%= store.street %>, <%= store.number %>, <%= store.zip_code %>
      </small>
      <p class="d-flex w-100 justify-content-between mb-1">
        <span>
          <%= store.city %>, <%= store.country %>
        </span>
        <span class="list-actions">
          <%= link_to 'Show', store, class: "ml-3" %>
          <%= link_to 'Edit', edit_store_path(store), class: "ml-3" %>
          <%= link_to 'Destroy', store, class: "ml-3", method: :delete, data: { confirm: 'Are you sure?' } %>
        </span>
      </p>
    </span>
  <% end %>
</div>

<br>
